<!DOCTYPE html>
<html>
  <head>
    <title>DEA Input Form</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
    <style>
      .dmu-section {
        border-left: 2px solid #ccc;
        border-right: 2px solid #ccc;
        padding: 15px;
      }

      .dmu-section .form-group {
        margin-bottom: 10px;
        display: flex;
        align-items: center;
      }

      .dmu-section .form-group label {
        width: 10%;
        margin-right: 5%;
        text-align: right;
      }

      .dmu-section .form-group .form-control {
        width: 80%;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1 class="text-center">DEA Input Form</h1>
      <form action="/submit" method="post">
        <% for (let i = 0; i < data.length; i++) { %>
        <div class="row">
          <div class="col-md-4 dmu-section">
            <% for (let j = 0; j < data[i].x.length; j++) { %>
            <div class="form-group">
              <label for="<%= `x${j + 1}_${i}_${data[i].x[j]}` %>"
                >x<%= j + 1 %>:</label
              >
              <input
                type="text"
                class="form-control"
                id="<%= `x${j + 1}_${i}_${data[i].x[j]}` %>"
                name="<%= `x${j + 1}_${i}_${data[i].x[j]}` %>"
                value="<%= data[i].x[j] %>"
                required
              />
            </div>
            <% } %>

            <!-- Y Values -->
            <% for (let j = 0; j < data[i].y.length; j++) { %>
            <div class="form-group">
              <label for="<%= `y${j + 1}_${i}_${data[i].y[j]}` %>"
                >y<%= j + 1 %>:</label
              >
              <input
                type="text"
                class="form-control"
                id="<%= `y${j + 1}_${i}_${data[i].y[j]}` %>"
                name="<%= `y${j + 1}_${i}_${data[i].y[j]}` %>"
                value="<%= data[i].y[j] %>"
                required
              />
            </div>
            <% } %>

            <hr />
          </div>
        </div>
        <% } %>

        <div class="text-center">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
